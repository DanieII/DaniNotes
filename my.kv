<CreateWindow>:
    create_name: name
    create_password: password

    FloatLayout:


        Label:
            pos_hint:{"x":0.3,"y":0.75}
            size_hint: 0.4, 0.1
            bold: True
            font_size: 25
            text: "Create an account"
            color: 0.3,0.3,0.3,1

        Label:
            pos_hint:{"x":0,"top":0.7}
            size_hint: 0.4, 0.1
            font_size: 20
            bold: True
            italic: True
            text:"Name"
            color: 0.3,0.3,0.3,1

        TextInput:
            pos_hint: {"x":0.3, "top":0.7}
            size_hint: 0.4, 0.12
            id: name
            multiline: False

        Label:
            pos_hint:{"x":0,"top":0.5}
            size_hint: 0.4, 0.1
            font_size: 20
            bold: True
            italic: True
            text:"Password"
            color: 0.3,0.3,0.3,1

        TextInput:
            pos_hint: {"x":0.3, "top":0.5}
            size_hint: 0.4, 0.12
            id: password
            multiline: False
            password: True

        Button:
            pos_hint:{"x":0.3,"y":0.15}
            size_hint: 0.4, 0.1
            font_size: 20
            text: "Register"
            on_release:
                root.manager.transition.direction = "left"
                root.submit_info()

        Button:
            pos_hint:{"x":0.3,"y":0.02}
            size_hint: 0.4, 0.1
            font_size: 20
            text: "Go Back"
            on_release:
                root.manager.transition.direction = "down"
                root.login_transition()


<LoginWindow>:
    login_name: name
    login_password: password

    FloatLayout:
        Image:
            source: "hjga.png"
            pos_hint:{"x":-0.02,"y":0.35}

        Label:
            pos_hint:{"x":0,"top":0.7}
            size_hint: 0.4, 0.1
            font_size: 20
            bold: True
            italic: True
            text:"Name"
            color: 0.3,0.3,0.3,1

        TextInput:
            pos_hint: {"x":0.3, "top":0.7}
            size_hint: 0.4, 0.12
            id: name
            multiline: False

        Label:
            pos_hint:{"x":0,"top":0.5}
            size_hint: 0.4, 0.1
            font_size: 20
            bold: True
            italic: True
            text:"Password"
            color: 0.3,0.3,0.3,1

        TextInput:
            pos_hint: {"x":0.3, "top":0.5}
            size_hint: 0.4, 0.12
            id: password
            multiline: False
            password: True

        Button:
            pos_hint:{"x":0.3,"y":0.15}
            size_hint: 0.4, 0.1
            font_size: 20
            text: "Log In"
            on_release:
                root.manager.transition.direction = "down"
                root.submit_info()

        Button:
            pos_hint:{"x":0.3,"y":0.02}
            size_hint: 0.4, 0.1
            font_size: 20
            text: "Create an account"
            on_release:
                root.manager.transition.direction = "up"
                root.create_transition()


<AddNote>:
    title: title
    text: text

    GridLayout:
        rows: 3
        GridLayout:
            rows: 2
            Label:
                font_size: 25
                color: 0.3,0.3,0.3,1
                text: "Title"
            TextInput:
                multiline: False
                id: title
            Label:
                font_size: 25
                color: 0.3,0.3,0.3,1
                text: "Text"
            TextInput:
                id: text
        Button:
            size_hint: 1, 0.3
            text: "Save"
            on_release:
                root.add_note_to_database()
                root.manager.transition.direction = "up"
                root.main_transition()
        Button:
            size_hint: 1, 0.3
            text: "Cancel"
            on_release:
                root.manager.transition.direction = "up"
                root.main_transition()


<MainWindow>:
    scroll: scroll

    GridLayout:
        rows: 3
        spacing: 3
        BoxLayout:
            orientation: "vertical"
            Button:
                size_hint_y: 0.15
                text: "Add Note"
                on_release:
                    root.manager.transition.direction = "down"
                    root.add_note_transition()
            Button:
                size_hint_y: 0.15
                text: "Refresh"
                on_release:
                    root.show_notes()
            ScrollView:
                do_scroll_x: False
                do_scroll_y: True
                GridLayout:
                    size_hint_y: None
                    cols: 1
                    row_default_height: '50dp'
                    row_force_default: True
                    spacing: 0, 0
                    padding: 0, 10
                    id: scroll
        Button:
            size_hint_y: 0.15
            text: "Log Out"
            on_release:
                root.manager.transition.direction = "up"
                root.logout()
        Button:
            size_hint_y: 0.15
            text: "Delete Account"
            on_release:
                root.delete_account()
